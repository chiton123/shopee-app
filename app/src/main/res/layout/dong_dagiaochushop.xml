<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageviewdagiaochushop"
        android:layout_margin="5dp"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewtensanphamdagiaochushop"
        android:text="Ten san pham"
        android:layout_toRightOf="@id/imageviewdagiaochushop"
        android:layout_margin="5dp"
        android:textSize="20sp"
        ></TextView>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So luong"
        android:textSize="20sp"
        android:id="@+id/textviewsoluongdagiaochushop"
        android:layout_below="@id/textviewtensanphamdagiaochushop"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewgiasanphamdagiaochushop"
        android:text="Gia"
        android:textSize="20sp"
        android:layout_below="@id/textviewsoluongdagiaochushop"
        android:layout_alignParentRight="true"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tong thanh toan"
        android:id="@+id/textviewtongthanhtoandagiaochushop"
        android:layout_below="@id/textviewgiasanphamdagiaochushop"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng đợi shopee chuyển tiền"
        android:textSize="20sp"
        android:layout_below="@id/textviewtongthanhtoandagiaochushop"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textColor="#E81510"
        ></TextView>
</RelativeLayout>