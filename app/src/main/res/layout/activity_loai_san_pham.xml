<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.ui.main.HienThiTimKiemActivity">
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerlayoutloaisanpham"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbarloaisanpham"
                android:background="#ff0"
                ></androidx.appcompat.widget.Toolbar>
            <co.ceryle.radiorealbutton.library.RadioRealButtonGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:rrbg_animateTexts_enter="overshoot"
                app:rrbg_animateSelectorDuration="100"
                app:rrbg_animateSelector="2"
                app:rrbg_dividerColor="#1B1B18"
                app:rrbg_dividerSize="1dp"
                app:rrbg_radius="10dp"
                app:rrbg_selectorColor="#AEAEA1"
                app:rrbg_selectorSize="4dp"
                android:id="@+id/buttongrouploaisanpham"
                >
                <co.ceryle.radiorealbutton.library.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="#4a4a4a"
                    app:rrb_text="Mới nhất"
                    android:id="@+id/radiobuttonmoinhatloaisanpham"
                    ></co.ceryle.radiorealbutton.library.RadioRealButton>
                <co.ceryle.radiorealbutton.library.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="#4a4a4a"
                    app:rrb_text="Bán chạy"
                    android:id="@+id/radiobuttonbanchayloaisanpham"
                    ></co.ceryle.radiorealbutton.library.RadioRealButton>
                <co.ceryle.radiorealbutton.library.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="#4a4a4a"
                    app:rrb_text="Giá tăng"
                    android:id="@+id/radiobuttonsapxeptheogialoaisanphamtang"
                    ></co.ceryle.radiorealbutton.library.RadioRealButton>
                <co.ceryle.radiorealbutton.library.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="#4a4a4a"
                    app:rrb_text="Giá giảm"
                    android:id="@+id/radiobuttonsapxeptheogialoaisanphamgiam"
                    ></co.ceryle.radiorealbutton.library.RadioRealButton>

            </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycleviewloaisanpham"
                ></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/navigationloaisanpham"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoảng giá"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    ></TextView>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:id="@+id/edittextpriceminloaisanpham"
                            android:inputType="number"
                            android:hint="Tối thiểu"
                            android:gravity="center"
                            android:background="@drawable/custom_edittext"
                            ></EditText>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   -   "
                            ></TextView>
                        <EditText
                            android:hint="Tối đa"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:inputType="number"
                            android:gravity="center"
                            android:id="@+id/edittextpricemaxloaisanpham"
                            android:background="@drawable/custom_edittext"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:text="0-100k"
                            android:textSize="14sp"
                            android:id="@+id/buttonnhonhatloaisanpham"
                            ></Button>
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:text="100k-300k"
                            android:textSize="14sp"
                            android:id="@+id/buttonnvualoaisanpham"
                            ></Button>
                        <Button
                            android:text="300k-700k"
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:textSize="14sp"
                            android:id="@+id/buttonlonnhatloaisanpham"
                            ></Button>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nơi bán"
                        android:textSize="20sp"
                        android:textColor="#0B0B0B"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Hà Nội"
                            android:id="@+id/buttonHanoi"
                            ></Button>
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Vĩnh Long"
                            android:id="@+id/buttonVinhLong"
                            ></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Cần Thơ"
                            android:id="@+id/buttonCanTho"
                            ></Button>
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="TP HCM"
                            android:id="@+id/buttonTPhcm"
                            ></Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vận chuyển"
                        android:textSize="20sp"
                        android:textColor="#0B0B0B"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Viettel Post"
                            android:id="@+id/viettelpost"
                            ></Button>
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Giao Hàng Nhanh"
                            android:id="@+id/giaohangnhanh"
                            ></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Giao Hàng Tiết Kiệm"
                            android:id="@+id/giaohangtietkiem"
                            ></Button>
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="JT Express"
                            android:id="@+id/jtexpress"
                            ></Button>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Button
                        android:textSize="13sp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="Thiết lập lại"
                        android:id="@+id/buttonresetloaisanpham"
                        android:background="@drawable/custom_button_hienthi"
                        ></Button>
                    <Button
                        android:textSize="13sp"
                        android:layout_marginLeft="30dp"
                        android:text="Áp dụng"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:id="@+id/buttonappdungloaisanpham"
                        android:background="@drawable/custom_button_hienthi"
                        ></Button>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>