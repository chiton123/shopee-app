<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagviewshopdanhmuc"
        android:layout_margin="5dp"
        android:focusable="false"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEN LOAI"
        android:id="@+id/textviewtenloaishop"
        android:layout_toRightOf="@id/imagviewshopdanhmuc"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewsoluongshop"
        android:text="so luong"
        android:textSize="20sp"
        android:layout_below="@id/textviewtenloaishop"
        android:layout_toRightOf="@id/imagviewshopdanhmuc"
        android:layout_margin="5dp"
        ></TextView>
</RelativeLayout>