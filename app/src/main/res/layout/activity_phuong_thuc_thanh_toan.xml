<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".ui.home.ui.main.PhuongThucThanhToanActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarphuongthucthanhtoan"
        android:background="#FFF"
        ></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopee đảm bảo"
            android:textSize="16sp"
            android:textColor="#F62520"
            android:id="@+id/textviewe"
            />
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/listviewphuongthucthanhtoan"
            android:dividerHeight="0.5dp"
            android:divider="#F68380"
            android:listSelector="#68C9F8"
            android:choiceMode="singleChoice"
            android:background="@drawable/row_highlighter"
            ></ExpandableListView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cách thánh toán"
            android:textSize="16sp"
            android:textColor="#000000"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/textviewcachthanhtoan"
            ></TextView>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F4511E"
        android:textColor="#FDFDFC"
        android:text="Đồng ý"
        android:textSize="20sp"
        android:id="@+id/buttondongypttt"
        ></Button>
</LinearLayout>