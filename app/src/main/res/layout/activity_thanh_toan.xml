<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".ui.payment.ThanhToanActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarThanhToan"
        android:background="#F6F9FA"
        app:title="THANH TOÁN"
        ></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/jps"
                        ></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ nhận hàng"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        ></TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:id="@+id/textviewdiachithanhtoan"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    ></TextView>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="100dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/right"
                android:id="@+id/imageviewdiachithanhtoan"
                ></ImageView>
        </LinearLayout>
        <ListView
            android:id="@+id/listviewthanhtoan"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            ></ListView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/linearthanhtoan"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:src="@drawable/payment"></ImageView>
                <TextView
                    android:id="@+id/textviewpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textSize="16sp"
                    android:textColor="#000000"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <TextView
                    android:id="@+id/textviewthanhtoan"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Thanh toán khi nhận hàng"></TextView>
                <ImageView
                    android:layout_weight="4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/right"
                    android:id="@+id/imageviewluachonthanhtoan"
                    ></ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lineartongtien"
            >
            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tông tiền hàng"
                android:textColor="#000000"
                android:textSize="16sp"
                ></TextView>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textviewtongtienhang"
                android:text="d"
                android:textSize="16sp"
                android:textColor="#F6430B"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán"
                android:textSize="16sp"
                android:textColor="#000000"
                ></TextView>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textviewtongthanhtoan"
                android:text="d"
                android:textSize="16sp"
                android:textColor="#F6430B"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/buttondathang1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF5722"
        android:text="ĐẶT HÀNG"
        android:textStyle="bold"
        android:textColor="#FFF"
        ></Button>
</LinearLayout>