<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarchitietsp"
        android:background="@null"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/linearchitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageviewchitiet"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp" />

                    <TextView
                        android:id="@+id/textviewtenchitietsp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ten san pham"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textviewgiachitiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gia"
                        android:textColor="#DC4516"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/soluongconlai"
                        android:text="Số còn lại"
                        android:textColor="#040403"
                        android:textSize="20sp"
                        ></TextView>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="202dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:textAlignment="center"></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lineardanhgia"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ĐÁNH GIÁ SẢN PHẨM"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        >
                        <RatingBar
                        android:id="@+id/ratingbarTB1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"

                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp" /></RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="5"
                            android:id="@+id/textviewaveragestar"
                            ></TextView>
                        <TextView
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewstar1"
                            android:text="/5"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ListView
                        android:id="@+id/listviewdanhgia123"
                        android:layout_width="match_parent"
                        android:layout_height="157dp"
                        android:visibility="gone"></ListView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/imageviewanhshop"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                           ></ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ten shop"
                                android:textSize="15sp"
                                android:textColor="#0E87F1"
                                android:textStyle="bold"
                                android:id="@+id/textviewtenshop"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="dia chi shop"
                                android:id="@+id/textviewdiachishop"
                                android:textSize="12sp"
                                ></TextView>
                        </LinearLayout>
                        <Button
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="70dp"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:id="@+id/buttonxemshop"
                            android:text="Xem shop"
                            android:textColor="#098D9E"
                            android:background="@drawable/custom_button_xemshop"
                            ></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:weightSum="9"
                        >
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="3"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:gravity="center"
                           >
                          <TextView
                              android:gravity="center"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/textviewsosanphamchitietsp"
                              android:text="so san pham"
                              android:textSize="15sp"
                              ></TextView>
                           <TextView
                               android:layout_marginLeft="30dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="|"
                               android:textSize="20sp"
                               ></TextView>
                       </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textviewdanhgiachitietsp"
                                android:text="danh gia"
                                android:textSize="15sp"
                                ></TextView>
                            <TextView
                                android:layout_marginLeft="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:textSize="20sp"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textviewphanhoichitietsp"
                                android:text="so san pham"
                                android:textSize="15sp"
                                ></TextView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="80dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm khác của shop"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        ></TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycleviewsanphamcuashop"
                        >

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-50dp"
        android:weightSum="9"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Chat"
            android:layout_weight="3"
            android:background="#FA4B14"
            android:id="@+id/buttonchat"
            android:textColor="#fff"
            />
        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="#fff"
            ></View>
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Thêm"
            android:layout_weight="3"
            android:background="#FA4B14"
            android:id="@+id/buttonthemvaogiohang"
            android:textColor="#fff"
            />
        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="#fff"
            ></View>
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Mua ngay"
            android:layout_weight="3"
            android:background="#FA4B14"
            android:id="@+id/buttonmuangay"
            android:textColor="#fff"
            />

    </LinearLayout>


</LinearLayout>